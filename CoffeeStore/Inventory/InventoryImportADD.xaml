<UserControl x:Class="CoffeeStore.Inventory.InventoryImportADD"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoffeeStore.Inventory"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             MinWidth="600" MinHeight="600">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="90"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="30"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!--Header here-->
        <Grid Background="#6B6158" Grid.Row="0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="5"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="1"
                   HorizontalAlignment="Left" VerticalAlignment="Center"
                   Foreground="#FFE297" FontSize="30" FontWeight="Bold">
                Lập phiếu nhập kho
            </Label>
            <Grid Grid.Row="1" Grid.ColumnSpan="2" Background="#FFE297"></Grid>
        </Grid>

        <!--Body here-->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="15"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="15"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="15"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <!--Textbox here-->
            <StackPanel Grid.Row="1">
                <TextBlock>Người lập</TextBlock>
                <TextBox Name="tbEmploy" 
                         Background="#DADADA" BorderThickness="1"
                         Padding="5" Margin="0,5,10,0"
                         IsReadOnly="True">
                </TextBox>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="2">
                <TextBlock Margin="10,0,0,0">Ngày lập</TextBlock>
                <TextBox Name="tbDate" 
                         Margin="10,5,0,0" Padding="5"
                         BorderThickness="1">
                </TextBox>
            </StackPanel>
            <!--Button here-->
            <Grid Grid.Row="3" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Name="btnAdd" 
                        BorderBrush="#6B6158" BorderThickness="1"
                        Background="#FFE297" Foreground="#6B6158">
                    + THÊM
                </Button>
            </Grid>

            <Grid Grid.Row="5" Grid.ColumnSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                </Grid.RowDefinitions>
                <!--List header here-->
                <Grid Background="#6B6158">
                    <Label Foreground="#FFE297" FontWeight="Bold" Content="Danh sách nguyên vật liệu, thiết bị nhập" Margin="15,0,0,0">
                    </Label>
                </Grid>
                <!--List body here-->
                <Border Grid.Row="1" Grid.Column="1" BorderBrush="#6B6158" BorderThickness="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="10"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="10"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <DataGrid Grid.Column="1" Grid.Row="1" 
                              x:Name="dataGridImport" 
                              BorderThickness="1"
                              VerticalScrollBarVisibility="Visible">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="STT"></DataGridTextColumn>
                                <DataGridTextColumn Header="Tên nguyên vật liệu, thiết bị"></DataGridTextColumn>
                                <DataGridTextColumn Header="Đơn giá"></DataGridTextColumn>
                                <DataGridTextColumn Header="Số lượng"></DataGridTextColumn>
                                <DataGridTextColumn Header="Đơn vị tính"></DataGridTextColumn>
                                <DataGridTextColumn Header="Tổng tiền"></DataGridTextColumn>
                                <DataGridTextColumn Header=""></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
                <!--Button here-->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Row="1" Width="100" Margin="0,0,10,0"
                            Background="#66A3FF" FontWeight="Bold"
                            VerticalAlignment="Top" HorizontalAlignment="Right">
                        LƯU
                    </Button>
                    <Button Grid.Row="1" Grid.Column="1" Width="100" Margin="10,0,0,0"
                            Background="#F27047" FontWeight="Bold"
                            VerticalAlignment="Top" HorizontalAlignment="Left">
                        HỦY
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
