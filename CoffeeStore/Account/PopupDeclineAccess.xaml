<UserControl x:Class="CoffeeStore.Account.PopupDeclineAccess"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:UserControls="clr-namespace:CoffeeStore.View"
             mc:Ignorable="d" 
             Height="210" Width="390">
    <StackPanel Background="White" Margin="0,0,0.4,-0.4">
        <!--Title bar here-->
        <Grid Margin="0,-5,0,0" x:Name="topBar" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <UserControls:TitleBar/>
        </Grid>
        <!--Popup content-->
        <TextBlock x:Name="tblockContent" Margin="30" HorizontalAlignment="Center"
                   Text="Bạn không có quyền truy cập &#x0a;chức năng này!" 
                   Height="39"
                   FontSize="15"/>
        <!--Button-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btSave" Height="40" Width="105"
                    Content="XÁC NHẬN" Margin="0" Background="#66A3FF"/>
            <Button x:Name="btExit" Height="40" Width="100"
                    Content="HỦY" Margin="10,0,0,0" Background="#F27047"/>
        </StackPanel>
    </StackPanel>
</UserControl>
